@model List<Entities.Models.DeletedAlbum>

@{
    ViewData["Title"] = "Music Store Page";
}

<style>
    table {
        font-family: Arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<div>
    <div>
        <div class="text-center">
            <h4 class="">External Music Store</h4>
        </div>
    </div>

    <div>
        <h5 class="text-center">All Albums</h5>

        @if (Model.Count() > 0)
        {
            <div>
                <table class="table">
                    <tr>
                        <td>Title</td>
                        <td>Genre</td>
                        <td>Price</td>
                        <td>Add</td>
                    </tr>

                    @foreach (var album in Model)
                    {
                        <tr>
                            <td>@album.Title</td>
                            <td>@album.Genre</td>
                            <td>@album.Price</td>
                            <td><a class="btn btn-primary" asp-action="Edit" asp-controller="MusicStore" role="button" asp-route-id="@album.Id">Add</a></td>
                        </tr>
                    }
                </table>
            </div>
        }
        else
        {
            <div>
                <p>Nothing display to display</p>
            </div>
        }
    </div>
</div>


<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        alert("okay");
    });
</script>
